{
  "name": "nodejs",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-esm -r tsconfig-paths/register src/main.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "prepare": "husky",
    "prisma:generate": "prisma generate --config ./src/config/prisma.config.ts",
    "prisma:migrate:dev": "prisma migrate dev --config ./src/config/prisma.config.ts",
    "prisma:migrate:reset": "prisma migrate reset --force --config ./src/config/prisma.config.ts",
    "prisma:studio": "prisma studio --config ./src/config/prisma.config.ts",
    "prisma:db-pull": "prisma db pull --config ./src/config/prisma.config.ts",
    "prisma:diff": "prisma migrate diff --from-empty --to-schema prisma/schema.prisma --script",
    "db:reset": "npm run prisma:migrate:reset && npm run prisma:generate",
    "db:pull": "npm run prisma:db-pull && npm run prisma:generate",
    "db:dev": "npm run prisma:migrate:dev && npm run prisma:generate"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.2",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "husky": "^9.1.7",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "prisma": "^7.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "zod": "^4.2.1"
  }
}
